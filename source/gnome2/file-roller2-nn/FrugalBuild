build() {
  Fcd "${Fsrcdir}/file-roller-${pkgver}"
  ./configure --prefix=/usr --sysconfdir=/etc \
      --libexecdir=/usr/lib/file-roller \
      --localstatedir=/var --disable-static \
      --disable-scrollkeeper \
      --disable-nautilus-actions
      # Configure file-roller without nautilus-actions
  Fmake
}

package() {
    Fcd "${Fsrcdir}/file-roller-${pkgver}"
    Fmake DESTDIR="${pkgdir}" install

    # Hack to run file-roller without nautilus
    Fsed -i 's/_summary/summary/g;s/_description/description/g;' ${Fsrcdir}/org.gnome.nautilus.gschema.xml.in
    Finstall -Dm755 ${Fsrcdir}/org.gnome.nautilus.gschema.xml.in ${Fpkgdir}/usr/share/glib-2.0/schemas/org.gnome.nautilus.gschema.xml
}